@model Paciente
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<br>
<h2 class="text-info">Informacion del paciente</h2>
<br>

<form method="post" asp-action="Delete" id="formDeletePaciente">
    <div class="container">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="id" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="id" readonly class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Nombre" readonly class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Edad" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Edad" readonly class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Enfermedad" class="col-form-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Enfermedad" readonly class="form-control">
            </div>
        </div>
        <div class="form-group-row">
            <div class="row">
                <div class="col-3">
                    <button
                        asp-asp-routeid="@Model"
                        class="btn btn-danger form-control"
                        id="btnEliminarPaciente"
                    >
                        <i class="far fa-trash-alt"></i>
                        Eliminar
                    </button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" asp-controller="Paciente" class="btn btn-info form-control">
                        Volver a la lista de pacientes
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $(function () {

        $("#btnEliminarPaciente").click(function (e) {
            e.preventDefault() 
          Swal.fire({
            title: 'Esta Seguro?',
            text: "Desea eliminar los datos de paciente?",
            icon: 'Warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, Eliminar!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                'Deleted!',
                'Your file has been deleted.',
                'success'
                )
                $("#formDeletePaciente").submit();
            }
}) 
        })
    });
</script>